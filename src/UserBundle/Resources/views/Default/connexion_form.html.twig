    <link rel="stylesheet" href="{{ asset("css/connexion.css") }}">

    <!-- jQuery & Bootstrap scripts -->
    <script defer src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
